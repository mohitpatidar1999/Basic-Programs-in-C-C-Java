import java.util.*;
public class Main
{
	public static void main(String[] args) {
		System.out.println("Enter number to convert into binary");
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int a[]=new int[40];
		int i=0;
		while(n>0){
		    a[i++]=n%2;
		    n=n/2;
		}
		for(int j=i-1;j>=0;j--){
		    System.out.print(a[j]);
		}
	}
}
